<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatchScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="4"
            android:text="Tu"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewYourPoints"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:background="@color/cardview_dark_background"
            android:textColor="#FFF"
            android:text="0"
            android:gravity="center"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textViewOpponentPoints"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:background="@color/cardview_dark_background"
            android:textColor="#FFF"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textViewOpponentName"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:textColor="#000"
            android:text="Avversario"
            android:gravity="right"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:text="Tempo rimanente nel round:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:textColor="#FFF"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/textViewOpponentHand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:layout_weight="2"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/textViewOpponentPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="2"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/imageButtonManoUno"
            android:layout_width="132dp"
            android:layout_weight="1"
            android:layout_height="103dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/mano_uno" />
        <ImageButton
            android:id="@+id/imageButtonManoDue"
            android:layout_width="132dp"
            android:layout_weight="1"
            android:layout_height="103dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/mano_due"/>

        <ImageButton
            android:id="@+id/imageButtonManoTre"
            android:layout_width="132dp"
            android:layout_weight="1"
            android:layout_height="103dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/mano_tre" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <ImageButton
            android:id="@+id/imageButtonManoQuattro"
            android:layout_width="132dp"
            android:layout_height="103dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/mano_quattro" />


        <ImageButton
            android:id="@+id/imageButtonManoCinque"
            android:layout_width="132dp"
            android:layout_height="103dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/mano_cinque" />

    </LinearLayout>
    <Button
        android:id="@+id/exitMatchButton"
        android:layout_width="144dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:background="#0080c0"
        android:padding="10dp"
        android:text="Esci"
        android:textColor="@android:color/white" />

</LinearLayout>
