<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatchScreen">

    <ImageButton
        android:id="@+id/imageButtonManoUno"
        android:layout_width="132dp"
        android:layout_height="103dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/mano_uno"
        android:layout_marginTop="475dp" />
    <ImageButton
        android:id="@+id/imageButtonManoDue"
        android:layout_width="132dp"
        android:layout_height="103dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/mano_due"
        android:layout_marginTop="475dp"
        android:layout_marginStart="135dp"/>

    <ImageButton
        android:id="@+id/imageButtonManoQuattro"
        android:layout_width="132dp"
        android:layout_height="103dp"
        android:layout_marginTop="620dp"
        android:layout_marginStart="70dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/mano_quattro" />

    <ImageButton
        android:id="@+id/imageButtonManoTre"
        android:layout_width="132dp"
        android:layout_height="103dp"
        android:layout_marginTop="480dp"
        android:layout_marginStart="273dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/mano_tre" />

    <ImageButton
        android:id="@+id/imageButtonManoCinque"
        android:layout_width="132dp"
        android:layout_height="103dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:layout_marginTop="620dp"
        android:layout_marginStart="220dp"
        android:src="@drawable/mano_cinque"/>

    <TextView
        android:id="@+id/textViewNumberPicker"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_marginTop="90dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:layout_marginStart="175dp" />
</RelativeLayout>
