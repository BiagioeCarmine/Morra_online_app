<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayWithFriends">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/createLobbyButton"
            style="@android:style/Widget.Button"
            android:background="@color/colorButtons"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:padding="5sp"
            android:layout_height="wrap_content"
            android:text="METTITI IN ATTESA"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="OPPURE"
            android:textColor="#000000"
            android:textSize="24sp" />



        <EditText
            android:id="@+id/lobbyIdInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID Utente"
            android:inputType="number" />

        <Button
            android:id="@+id/playWithFriendButton"
            android:background="@color/colorButtons"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="UNISCITI AD UTENTE"
            android:textSize="18sp" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>