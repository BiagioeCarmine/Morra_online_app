<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Play">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="MORRA ONLINE"
        android:textColor="#000000"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/new_mano_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageButton3"
            android:layout_marginTop="70dp"
            android:text="GIOCA CON \nGLI AMICI"
            android:textColor="#4242ff"
            android:textSize="25sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp">
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@android:color/transparent"
            android:paddingStart="0dp"
            android:paddingEnd="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_mano_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="137dp"
            android:paddingStart="250dp"
            android:text="RICERCA AUTOMATICA PARTITA"
            android:textColor="#4242ff"
            android:textSize="25sp" />
    </RelativeLayout>

</LinearLayout>